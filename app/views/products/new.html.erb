<h1>商品新規登録</h1>
<%= form_with model:@product, local:true do |f| %>
  <h4>商品画像</h4>
  <%= f.attachment_field :image %>
  <h4>商品名</h4>
  <%= f.text_field :name %>
  <h4>商品説明</h4>
  <%= f.text_area :opinion %>
  <h4>ジャンル</h4>
  <%= f.collection_select :genre_id, Genre.all, :id, :name, {:include_blank => true} %>
  <h4>税抜き価格</h4>
  <%= f.text_field :price %>円
  <h4>販売ステータス</h4>
  <%= f.select :is_active ,[['販売中',true],['販売中止',false]] %>
  <%= f.submit '投稿' %>
<% end %>
