<div>
  <h1>ジャンル一覧・追加</h1>
<%= form_with model: @genre, local:true do |f| %>
  <h4>ジャンル名</h4>
  <%= f.text_field :name %>
  <%= f.submit '投稿' %>
<% end %>
</div>


<table>
  <tr>
    <th>ジャンル</th>
  </tr>
  <% @genres.each do |genre| %>
  <tr>
    <td>
      <%= genre.name %>
    </td>
    <td><%= link_to '編集', edit_genre_path(genre.id) %></td>
  </tr>
  <% end %>
</table>