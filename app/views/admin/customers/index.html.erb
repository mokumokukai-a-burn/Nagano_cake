<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <h2>会員一覧</h2>
  </div>
  <div class="dflex justify-content-center">
    <table class="table">
      <thead>
        <tr>
          <th style="width:100px;">会員ID</th>
          <th >氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customer_pages.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td><%= link_to customer.last_name + customer.first_name , admin_customer_path(customer.id) %></td>
            <td><%= customer.email %></td>
            <td>
              <% if customer.is_deleted == false %>
                有効
              <% else %>
                退会
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="d-flex justify-content-center">
    <%= paginate @customer_pages %>  
  </div>
</div>
<%= paginate @orders %>
