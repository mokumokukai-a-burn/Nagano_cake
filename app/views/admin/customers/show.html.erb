<div class="container">
  <div class="row">
    <h2><%= @customer.last_name + @customer.first_name %>さんの会員詳細</h2>
  </div>
  <div class="row-table">
    <table class='table table-borderless'>
    	  <th style="width:250px;">会員ID</th>
    	  <th><%= @customer.id %></th>
      </tr>
      <tr>
    	  <th>氏名</th>
    	  <th><%= @customer.last_name + " " + @customer.first_name %></th>
      </tr>
      <tr>
        <th>フリガナ</th>
        <th><%= @customer.last_name_kana + " " + @customer.first_name_kana %></th>
      </tr>
      <tr>
        <th>郵便番号</th>
        <th><%= @customer.post_number %></th>
      </tr>
      <tr>
        <th>住所</th>
        <th><%= @customer.street_address %></th>
      </tr>
      <tr>
        <th>電話番号</th>
        <th><%= @customer.phone_number %></th>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <th><%= @customer.email %></th>
      </tr>
      <tr>
        <th>会員ステータス</th>
        <th>
          <% if @customer.is_deleted == false %>
            有効
          <% else %>
            退会
          <% end %>
        </th>
      </tr>
    </table>
  </div>
  <div class="row">
    <div class="col-2"></div>
    <%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-info" %>
    <div class="col-1"></div>
    <%= link_to "注文履歴一覧を見る", admin_orders_path, class: "btn btn-info" %>
  </div>
</div>