views/admin/customers/edit.html.erb

<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2><%= @customer.last_name + @customer.first_name %> の会員情報編集ページ</h2>
    <!--urlを明記しないとpublicの方を参照してしまうので注意-->
    <%= form_with model:@customer ,url:admin_customer_path(@customer.id), local:true do |f| %>
      <%= render 'layouts/errors', obj: @customer %>
      <!--name-->
      <div class="form-group">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :last_name_kana %>
        <%= f.text_field :last_name_kana, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :first_name_kana %>
        <%= f.text_field :first_name_kana, class: "form-control name" %>
      </div>
      <!--any numbers-->
      <div class="form-group">
        <%= f.label :post_number %>
        <%= f.text_field :post_number, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :street_address %>
        <%= f.text_field :street_address, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :phone_number %>
        <%= f.text_field :phone_number, class: "form-control introduction" %>
      </div>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.text_field :email, class: "form-control introduction" %>
      </div>
      <div class="form-group">
        <%= f.label :is_deleted %>
        <%= f.radio_button :is_deleted, false %>有効
        <%= f.radio_button :is_deleted, true %>退会
      </div>
      <!-- update button -->
      <div class="form-group">
        <%= f.submit "変更を保存",class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
</div>