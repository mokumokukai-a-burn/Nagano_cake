<h2>注文履歴一覧</h2>
<table>
  <tr>
    <th>購入日時</th>
    <th>購入者</th>
    <th>注文個数</th>
    <th>注文ステータス</th>
  </tr>
  <tr>
  <% @orders.each do |order| %>
    <td><%= order.created_at %></td>
    <td><%= order.customer.full_name %></td>
    <td><%= order.ordered_products.sum(:amount) %></td>
    <td><%= order.status %></td>
  <% end %>
  </tr>
</table>

<%= paginate @order_kaminari %>
