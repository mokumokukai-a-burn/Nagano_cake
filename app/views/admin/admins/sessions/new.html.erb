



<%= render "admin/admins/shared/links" %>

<div class="container">
  <div class="row-logintitle">
    <h2>管理者ログイン</h2>
  </div>
  <div class="row">
    <div class="col-2"></div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <table>
        <tr>
          <th style="width: 150px"><%= f.label 'メールアドレス' %></th>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email",size: "40" %></td>
          <td></td>
        </tr>
        <tr>
          <th style="width: 150px"><%= f.label 'パスワード' %></th>
          <td><%= f.password_field :password, autocomplete: "current-password", size: "40" %></td>
          <td></td>
        </tr>
        <tr>
          <th style="width: 150px"></th>
          <td><%= f.submit "ログイン", class: 'btn btn-primary' %></td>
          <td></td>
        </tr>
      </table>
      <% end %>
</div>