<div class="container">
  <div class="row-logintitle">
    <h2>管理者新規登録</h2>
  </div>
  <div class="row">
    <div class="col-2"></div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "admin/admins/shared/error_messages", resource: resource %>
      <table>
        <tr>
          <th style="width: 150px"><%= f.label 'メールアドレス' %></th>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email",size: "40" %></td>
          <td></td>
        </tr>
        <tr>
          <th style="width: 150px"><%= f.label 'パスワード' %></th>
          <td>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password",size: "40" %>
          </td>
          <td></td>
        </tr>
        <tr>
          <th style="width: 150px"><%= f.label 'パスワード確認用' %></th>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password",size: "40" %></td>
          <td></td>
        </tr>
        <tr>
          <th style="width: 150px"></th>
          <td><%= f.submit "新規登録" , class: 'btn btn-primary' %></td>
          <td></td>
        </tr>
      </table>
      <% end %>
  </div>
</div>


<%= render "admin/admins/shared/links" %>
