
<h4>商品一覧</h4>
<%= link_to new_admin_product_path(@product.id) do %>
  <i class="fas fa-plus-circle fa-2x fa-pull-right"></i>
<% end %>
<table class= "table">
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
<% @products.each do |product| %>
    <tr>
      <td>
        <%= product.id %>
      </td>
      <td><%= link_to product.name, admin_product_path(product.id) %></td>
      <td><%= product.price %></td>
      <td><%= product.genre.name %></td>
      <td>
        <% pia = product.is_active %>
        <% if pia == true %>
          販売中
        <% else %>
          販売中止
        <% end %>
      </td>
    </tr>
  <% end %>
</table>
  <%= paginate @products %>

