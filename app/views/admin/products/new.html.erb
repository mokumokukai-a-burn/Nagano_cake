<h1>商品新規登録</h1>

<%= form_with model:@product, url:admin_products_path, local:true do |f| %>

  <h4>商品画像</h4>
  <%= f.attachment_field :image %>
  <h4>商品名</h4>
  <%= f.text_field :name %>
  <h4>商品説明</h4>
  <%= f.text_area :opinion %>
  <h4>ジャンル</h4>
  <%= f.collection_select :genre_id, Genre.all, :id, :name, {:include_blank => true} %>
  <h4>税抜き価格</h4>
  <%= f.text_field :price %>円
  <h4>販売ステータス</h4>
  <%= f.radio_button :is_active, true, checked: "checked"%>販売中
  <%= f.radio_button :is_active, false %>販売中止
  <%= f.submit '投稿' %>
<% end %>
