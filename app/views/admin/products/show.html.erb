
<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <h1 style="margin: 50px 0;">商品詳細</h1>
  </div>
  <div class="row">
    <div style="margin-top: 100px;">
      <div class="col-xs-5">
       <p style="margin-left: 280px;"><%= attachment_image_tag @product, :image, size: "300x220",  fallback: "cake.jpg" %><p></p><br>
      </div>
    </div>
    <div class="col-xs-5">
      <div style="margin-top: 100px;">
        <h3 style="margin-left: 40px;">
          商品名
          <span class="col-1"></span>
          <%= @product.name %>
        </h3>
        <p style="margin-left: 40px;">
          商品説明
          <span class="col-1"></span>
          <%= @product.opinion %>
        </p>
        <p style="margin-left: 40px;">
          ジャンル
          <span class="col-1"></span>
          <%= @product.genre.name %>
        </p>
        <p style="margin-left: 40px;">
          税込価格<br>
          (税抜き価格）
          <span class="col-1"></span>
          <%= @product.price.to_s(:delimited) %>(<%= (@product.price*1.1).floor.to_s(:delimited) %>)円
        </p>
        <p style="margin-left: 40px;">
          販売ステータス
          <span class="col-1"></span>
          <%  pia = @product.is_active %>
          <% if pia == true %>
            販売中
          <% else %>
            販売中止
          <% end %>
        </p>
        <p style="margin-left: 40px;"><%= link_to "編集する", edit_admin_product_path(@product.id), class: 'btn btn-success' %></p>
      </div>

    </div>
  </div>

</div>
