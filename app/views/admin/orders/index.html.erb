<h2>注文履歴一覧</h2>
<table class="table">
  <tr>
    <th>購入日</th>
    <th>購入者</th>
    <th>注文個数</th>
    <th>注文ステータス</th>
  </tr>
  <% @orders.each do |orders| %>
  <tr>
    <td>
      <%= link_to admin_order_path(orders.id) do %>
        <%= orders.created_at.strftime("%Y-%m-%d %H:%M") %>
      <% end %>
    </td>
    <td>
      <%= orders.customer.last_name %>
      <%= orders.customer.first_name %>
    </td>
    <td><%= orders.ordered_products.all.sum(:quantity) %></td>
    <td><%= orders.status %></td>
  </tr>
  <% end %>
</table>
