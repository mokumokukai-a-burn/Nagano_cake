<h2>注文履歴一覧</h2>
<table class="table">
  <tr>
    <th>購入日</th>
    <th>購入者</th>
    <th>注文個数</th>
    <th>注文ステータス</th>
  </tr>
  <% @orders.each do |orders| %>
  <tr>
    <td><%= orders.created_at %></td>
    <td>
      <%= orders.customer %>
      <%= orders.customer %>
    </td>
    <td><%= orders.ordered_products.sum(:amount) %></td>
    <td><%= orders.status %></td>
  </tr>
  <% end %>
</table>