<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <h2 style="margin: 50px 0;">注文履歴詳細</h2>
  </div>
  <div class="row">
    <%= form_with model:@order, url:"/admin/orders/#{@order.id}", local:true do |f| %>
      <table class="table table-borderless">
        <tr>
          <th><h4>購入者</h4></th>
          <td><%= @order.customer.last_name %><%= @order.customer.first_name %></td>
        </tr>
        <tr>
          <th><h4>注文日</h4></th>
          <td><%= @order.created_at.strftime("%Y-%m-%d %H:%M") %></td>
        </tr>
        <tr>
          <th><h4>配送先</h4></th>
          <td>
            <%= @order.post_address %>
            <%= @order.street_address %>
            <%= @order.address %>
          </td>
        </tr>
        <tr>  
          <th><h4>支払い方法</h4></th>
          <td><%= @order.payment %></td>
        </tr>
        <tr>  
          <th><h4>注文ステータス</h4></th>
          <td><%= f.select :status, [["入金待ち", "入金待ち"], ["入金確認", "入金確認"], ["製作中", "製作中"], ["発送準備中", "発送準備中"],["発送済み", "発送済み"]] %></td>
          <td> <%= f.submit '更新',class: 'btn btn-success' %></td>
        </tr>
      </table>
    <% end %> 
  </div>
  <div class="row">
    <table class="table">
      <tr>
        <th>商品名</th>
        <th>単価（税込）</th>
        <th>数量</th>
        <th>小計</th>
        <th>制作ステータス</th>
        <th></th>
      </tr>
      <% @order.ordered_products.each do |ordered_product| %>
          <tr>
            <td><%= ordered_product.product.name %></td>
            <td><%= a = ordered_product.product.price %></td>
            <td><%= b = ordered_product.quantity %></td>
            <td><%= a * b %></td>
            <td>
              <%= form_with model: ordered_product, url: admin_ordered_product_path(ordered_product.id), local: true do |f| %>
                <%= f.select :making_status, {'着手不可':'着手不可', '製作待ち':'製作待ち', '製作中':'製作中', '製作完了':'製作完了'}, { class: 'form-control' , required: true } %>
                <%= f.submit '更新',class: 'btn btn-success' %>
              <% end %>
            </td>
            <td>
            </td>
          </tr>
      <% end %>
    </table>
    <table class="table table-borderless">
      <tr>
        <th>商品合計</th>
        <td><%= @order.total_price %></td>
      </tr>
      <tr>
        <th>送料</th>
        <td><%= @order.shipping_cost %></td>
      </tr>
      <tr>
        <th>請求金額合計</th>
        <td><%= @order.total_price + @order.shipping_cost  %></td>
      </tr>
    </table>
  </div>
</div>

 
  
