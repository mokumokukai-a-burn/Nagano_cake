<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <h1>ジャンル一覧・追加</h1>
  </div>
  <div class="row">
    <%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
    <table class= "table table-borderless">
      <tr>
        <th><span>ジャンル名<span></th>
        <td><%= f.text_field :name, class: "form-control name" %></td>
        <td><%= f.submit '新規登録', class: 'btn btn-success' %></td>
      </tr>
    </table>
    <% end %>
  </div>
  <div class="row-table">
    <table class="table">
      <thead>
        <th>ジャンル</th>
        <th></th>
      </thead>
      <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><h3><%= genre.name %></h3></td>
          <td><%= link_to '編集', edit_admin_genre_path(genre.id), class: 'btn btn-success' %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>