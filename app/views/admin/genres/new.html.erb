<h1>ジャンル一覧・追加</h1>
<%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
  <h4>ジャンル名</h4>
  <%= f.text_field :name %>
  <%= f.submit '変更を保存' %>
<% end %>


<table>
  <tr>
    <th>ジャンル</th>
  </tr>
  <tr>
  <% @genres.each do |genre| %>
    <td>
      <%= genre.name %>
    </td>
    <td><%= link_to '編集', edit_admin_genre_path(genre.id) %></td>
  <% end %>
  </tr>
</table>