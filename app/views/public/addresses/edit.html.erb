<div class='container'>
  <div class='row'>
    <div class="col-1"></div>
    <h2>配送先編集</h2>
  </div>
  
  <div class='row-address'>
    <%= form_with model:@address ,url:address_path(@address.id), local:true do |f| %>
    <table class="table table-borderless">
      <tr>
        <div class="form-group">
          <th style="width: 200px"><%= f.label '郵便番号' %></th>
          <td style="width: 150px"><%= f.text_field :post_address, class: "form-control name" %></td>
          <td></td>
        </div>
      </tr>
      <tr>
        <div class="form-group">
          <th><%= f.label '住所' %></th>
          <td colspan="2"><%= f.text_field :street_address, class: "form-control name" %></td>
        </div>
      </tr>
      <tr>
        <div class="form-group">
          <th><%= f.label '宛名' %></th>
          <td><%= f.text_field :address, class: "form-control name" %></td>
        </div>
      </tr>
      <tr>
        <div class="form-group">
        <th></th>
        <td><%= f.submit "変更内容を保存",class: 'btn btn-success' %></td>
        </div>
      </tr>
    </table>
  <% end %>
</div>