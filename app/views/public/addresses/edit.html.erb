views/address/edit.html.erb
<h2>配送先編集</h2>
<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <%= form_with model:@address ,url:address_path(@address.id), local:true do |f| %>
      <div class="form-group">
        <%= f.label '郵便番号' %>
        <%= f.text_field :post_address, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label '住所' %>
        <%= f.text_field :street_address, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label '宛名' %>
        <%= f.text_field :address, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.submit "変更内容を保存",class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
</div>