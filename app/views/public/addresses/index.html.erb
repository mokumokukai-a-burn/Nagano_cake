<div class="container">
  <div class="row">
    <div class="col-1"></div>
  </div>
  <div class='row-address'>
    <div class="form-box">
      <%= form_with model:@address ,url:addresses_path, local:true do |f| %>
      <table class="table table-borderless">
        <tr>
          <div class="form-group">
            <th style="width: 200px"><%= f.label '郵便番号(ハイフンなし)' %></th>
            <td style="width: 200px"><%= f.text_field :post_address, class: "form-control" %></td>
            <td></td>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <th><%= f.label '住所' %></th>
            <td colspan="4"><%= f.text_field :street_address, class: "form-control" %></td>
            <td></td>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <th><%= f.label '宛名' %></th>
            <td><%= f.text_field :address, class: "form-control" %></td>
            <td></td>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <th></th>
            <td><%= f.submit "新規登録",class: 'btn btn-success' %></td>
          </div>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
  
  <h2>配送先一覧</h2>
  <div class='row'>
     <% @addresses.each do |address| %>
      <table border="1">
        <thead>
          <tr>
            <th width="100" height="40" bgcolor="#C0C0C0">郵便番号</th>
            <th width="300" height="40" bgcolor="#C0C0C0">住所</th>
            <th width="100" height="40" bgcolor="#C0C0C0">宛名</th>
            <th width="200" height="40" bgcolor="#C0C0C0"></th>
          </tr>
        </thead>
        <tbody>
            <tr>
              <td height="70"><%= address.post_address %></td>
              <td height="70"><%= address.street_address %></td>
              <td height="70"><%= address.address %></td>
              <td height="70">
                <span><%= link_to '編集する', edit_address_path(address), class: 'btn btn-success' %></span>
                <span></span>
                <span><%= link_to '削除する', address_path(address) , method: :delete, class: 'btn btn-danger' %></span>
              </td>
            </tr>
        </tbody>
      </table>
    <% end %>

</div>