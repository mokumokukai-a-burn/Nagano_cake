
<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/customers/shared/error_messages", resource: resource %>
  <div class="field">
    名前<br />
    （姓）<%= f.text_field :last_name, autofocus: true %>
    （名）<%= f.text_field :first_name, autofocus: true %>
  </div>

  <div class="field">
    フリガナ<br />
    （セイ）<%= f.text_field :last_name_kana, autofocus: true %>
    （メイ）<%= f.text_field :first_name_kana, autofocus: true %>
  </div>

  <div class="field">
    メールアドレス<br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    郵便番号（ハイフンなし）<br />
    <%= f.text_field :post_number, autofocus: true %>
  </div>

  <div class="field">
    住所<br />
    <%= f.text_field :street_address, autofocus: true %>
  </div>

  <div class="field">
    電話番号（ハイフンなし）<br />
    <%= f.text_field :phone_number, autofocus: true %>
  </div>

  <div class="field">
    パスワード(６文字以上)<br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    パスワード(確認用)<br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "public/customers/shared/links" %>
