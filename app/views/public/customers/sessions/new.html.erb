<div class="container">
  <div class="row-logintitle">
    <h2>ログイン</h2>
  </div>

  <div class="row">
    <div class="col-1"></div>
    <p>会員の方はこちらからログイン</p>
  </div>

  <div class="row">
    <div class="col-2"></div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <table>
        <tr>
          <th style="width: 150px"><%= f.label :メールアドレス %></th>
          <td></td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email", size: "40" %></td>
        </tr>
        <tr>
          <th style="width: 150px"><%= f.label :パスワード %></th>
          <td></td>
          <td><%= f.password_field :password, autocomplete: "current-password", size: "40" %></td>
        </tr>
        <tr>
          <th style="width: 150px"></th>
          <td></td>
          <td><%= f.submit "ログイン", class: 'btn btn-primary' %></td>
        </tr>
      </table>
      <% end %>
  </div>

  <div class="row-logintext">
    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <h2>会員登録がお済みでない方</h2>
  </div>

  <div class="row">
    <div class="col-1"></div>
    <%= link_to "こちら", new_registration_path(resource_name) %>から新規登録を行ってください。
    <% end %>
  </div>
</div>

