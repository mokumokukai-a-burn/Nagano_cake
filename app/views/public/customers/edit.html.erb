<div class='container'>
  <div class='row'>
    <div class="col-1"></div>
    <h2>会員情報編集</h2>
  </div>
  
  <div class="row">
  <%= form_with model:@customer ,url:customer_path(@customer.id), local:true do |f| %>
    <%= render 'layouts/errors', obj: @customer %>
    
    <table>
      <tr>
        <div class="form-group">
          <th><%= f.label :氏名 %></th>
          <td><%= f.text_field :last_name, class: "form-control name" %></td>
          <td><%= f.text_field :first_name, class: "form-control name" %></td>
        </div>
      </tr>
      <tr>
        <div class="form-group">
          <th><%= f.label :フリガナ %></th>
          <td><%= f.text_field :last_name_kana, class: "form-control name" %></td>
          <td><%= f.text_field :first_name_kana, class: "form-control name" %></td>
      </div>
      </tr>
      <tr>
        <div class="form-group">
          <th><%= f.label :郵便番号 %></th>
          <td><%= f.text_field :post_number, class: "form-control name" %></td>
        </div>
      </tr>
      <tr>
        <div class="form-group">
          <th><%= f.label :住所 %></th>
          <td colspan="2"><%= f.text_field :street_address, class: "form-control name" %></td>
        </div>
      </tr>
      <tr>
        <div class="form-group">
          <th><%= f.label :電話番号 %></th>
          <td><%= f.text_field :phone_number, class: "form-control introduction" %></td>
        </div>
      </tr>
      <tr>
        <div class="form-group">
          <th><%= f.label :メールアドレス %></th>
          <td><%= f.text_field :email, class: "form-control introduction" %></td>
          <td></td>
        </div>
      </tr>
      <tr>
        <div class="form-group">
          <th></th>
          <td><%= f.submit "編集内容を保存",class: "btn btn-success" %></td>
          <td><%= link_to "退会する", unsubscrive_customer_path(@customer.id), class: "btn btn-danger" %></td>
        </div>
      </tr>
    </table>
  <% end %>
  </div>
</div>