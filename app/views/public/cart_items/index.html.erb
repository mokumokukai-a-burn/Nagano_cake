<div class="container">
<div class="row">

<h4 style="margin-top: 20px;">ショッピングカート</h4>
<h4 style="margin-left: 900px;"><%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete, class: "btn btn-danger" %></h4>
</div>

 <table class="table table-bordered" >
<thead>
<tr>
 <th style="width: 60px">商品名</th>
  <th style="width: 15%">単価（税込）</th>
  <th style="width: 15%">数量</th>
  <th style="width: 15%">小計</th>
  <th style="width: 15%"></th>
</tr>
</thead>

<thead>
<tr>
<% @total = 0 %>
<% @cart_items.each do |cart_item| %>
<td  style="hight: 15px"><%= attachment_image_tag @product, :image_id, size: "50x50",  fallback: "cake.jpg" %><%= cart_item.product.name %></td>
<th class="align-middle"><%= cart_item.product.price %></th>
<%= form_for cart_item, url: cart_item_path(cart_item) do |f| %>
<td class="align-middle"><%= f.number_field :quantity, min:1, max: 20 %><%= f.submit "変更" ,class:"btn btn-success" %></td>
<th class="align-middle"><%= cart_item.product.price %></th>
<% @total += cart_item.product.price %>
<% end %>
<td style="hight: 15px"><%= link_to "削除する", cart_item_path(cart_item), method: :delete, class: "btn btn-danger" %></td>
<% end %>
</tr>
</thead>
</table>
</div>


<div class="goukei">
<div class="float-right">
<div class="container">
<table class="table table-bordered col-xs-8" >
<thead>
<tr>
<th style="width: 165px">合計金額</th>
<th style="width: 165px"><%= @total %></th>
</tr>
</thead>
</table>
</div>
</div>
</div>
<div class="container">
<br>
<div><%= link_to "買い物を続ける", products_path, class:"btn btn-primary" %></div>
<br>
<div class="text-center"><%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %></div>
</div>
