<div class="container">
  <div class="row">
    <div class='col-1'></div>
    <h4 style="margin: 50px 0;">商品一覧(全<%= @product_all %>件)</h4>
    <div class="col-lg-11 mx-auto">
      <div class="row">
      <% @products.each do |product| %>
        <% unless product.is_active == false %>
        <div class="box" style="float:left; margin-right:20px;">
          <%= link_to product_path(product.id) do %>
            <%= attachment_image_tag product, :image, size: "220x170",  fallback: "cake.jpg" %><br>
          <% end %>
          <br>
          <p><%= product.name %></p>
          <p>¥<%= product.price.to_s(:delimited) %></p>
        </div>
        <% end %>
      <% end %>
      </div>
    </div>
  </div>
</div>
<p style="margin-left: 320px;"><%= paginate @products %></p>
