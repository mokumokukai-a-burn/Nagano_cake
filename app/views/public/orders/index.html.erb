<h4>注文履歴一覧</h4>
<table class= "table">
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払い金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
<%= @orders.each do |orders| %>
    <tr>
      <td><%= orders.created_at %></td>
      <td>
        <%= orders.postal_code %>
        <%= orders.address %>
        <%= products.name %>
      </td>
      <td><%= orders.products.name %></td>
      <td><%= products.total_payment %></td>
      <td><%= products.status %></td>
      <td><%= link_to "詳細", order_path(orderes.id) %></td>
    </tr>
  <% end %>
</table>