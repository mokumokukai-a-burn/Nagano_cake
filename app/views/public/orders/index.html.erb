<div class="container orders">
<h4><b>注文履歴一覧</b></h4>
<!--<table class= "table">-->
<table class="table table-bordered">
  <thead>
    <tr>
      <th>注文日</th>
      <th  width="400px">配送先</th>
      <th>注文商品</th>
      <th>支払い金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
    </thead>
<% @orders.each do |orders| %>
    <tr>
      <td><%= orders.created_at.strftime("%Y-%m-%d") %></td>
      <td>
        <%= orders.post_address %><br>
        <%= orders.street_address %><br>
        <%= orders.address %><br>
      </td>
      <td><% orders.ordered_products.each do |ordered_product| %>
          <%= ordered_product.product.name %></td>
      <td><%= orders.total_price %></td>
      <td><%= orders.status %></td>

      <td><%= link_to '表示する', order_path(orders.id), class: 'btn btn-primary' %></td>
    </tr>
  <% end %>
  <% end %>
</table>
</div>