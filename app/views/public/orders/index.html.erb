<h1>注文履歴一覧</h1>
<table class= "table">
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払い金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
<%= @products.each do |products| %>
    <tr>
      <td><%= products.created_at %></td>
      <td>
        <%= products.post_address %>
        <%= products.street_address %>
        <%= products.address %>
      </td>
      <td></td>
      <td><%= products.total_price %></td>
      <td><%= products.status %></td>
      <td><%= link_to '詳細', order_path(orderes.id) %></td>
    </tr>
  <% end %>
</table>