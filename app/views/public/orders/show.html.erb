<h4>注文履歴詳細</h4>
<div>注文情報</div>
<table border="1" style="border-collapse: collapse" align="left">
  <tr>
    <th>注文日</th>
    <th><%= @order.created_at.strftime('%Y/%m/%d') %></th>

  </tr>
  <tr>
    <td>配送先</td>
    <td>
      <%= @order.post_address %><br>
      <%= @order.street_address %><br>
      <%= @order.address %><br>
    </td>
  </tr>
  <tr>
    <td>支払い方法</td>
    <td><%= @order.payment %></td>
  </tr>
  <tr>
    <td>ステータス</td>
    <td><%= @order.status %></td>
  </tr>
</table>
<div>請求情報</div>
<table border="1" style="border-collapse: collapse">
  <tr>
    <th>商品合計</th>
    <th><%= @order.total_price %></th>
  </tr>
  <tr>
    <td>配送料</td>
    <td><%= @order.shipping_cost %></td>
  </tr>
  <tr>
    <td>ご請求額</td>
    <td><%= @order.total_price + @order.shipping_cost  %></td>
  </tr>
</table>
<div>注文内容</div>
<table border="1" style="border-collapse: collapse">
  <tr>
    <th>商品</th>
    <th>単価（税込）</th>
    <th>個数</th>
    <th>小計</th>
  </tr>
  <tr>
    <td><% @ordered_products.each do |ordered_product| %>
          <%= ordered_product.product.name %></td>
          <td><%= ordered_product.product.price %></td>
          <td><%= ordered_product.quantity %></td>
          <td><%= ((ordered_product.product.price*1).floor*ordered_product.quantity) %></td>
        <% end %>
  </tr>
</table>


